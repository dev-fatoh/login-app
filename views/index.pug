extends layout 

block content
  .main
    .left-side
      h1 what will you
        br/ build today?
      p let's get started
    form.right-side(action="/" method="Post")
      .user-profile
        img(src="/imeges/ben-den-engelsen-YUu9UAcOKZ4-unsplash.jpg", alt="user-profile")
      p do you have account?
        a(href="/login") signin 
      input(class="p-2" type="text", name="username" placeholder="username")
      if path == 'username'
        p.text-danger #{message}
      input(class="p-2" type="email", name="email" placeholder='email')
      if path == 'email'
        p.text-danger #{message}
      input(class="p-2" type="password", name="password" placeholder="password")
      button(type="submit") Submit
        
